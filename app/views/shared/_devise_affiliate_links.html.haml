.block
  %h3 Get your stuff on the Store
  %ul.navigation
    - if controller_name != 'sessions'
      %li= link_to t('devise.sessions.link'), new_session_path(resource_name)

    - if devise_mapping.registerable? && controller_name != 'registrations'
      %li= link_to t('devise.registrations.link'), new_registration_path(resource_name)

    - if devise_mapping.recoverable? && controller_name != 'passwords'
      %li= link_to t('devise.passwords.link'), new_password_path(resource_name)

    - if devise_mapping.confirmable? && controller_name != 'confirmations'
      %li= link_to t('devise.confirmations.link'), new_confirmation_path(resource_name)

    - if devise_mapping.lockable? && controller_name != 'unlocks'
      %li= link_to t('devise.unlocks.link'), new_unlock_path(resource_name)

