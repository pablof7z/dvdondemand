.group
  = f.error_messages

.group
  = f.label :card_type, 'Card Type', :class => :label
  = f.select :card_type, [['Visa','visa'], ['MasterCard','mastercard'], ['Discover','discover'], ['American Express', 'american_express']]
.group
  = f.label :card_number, 'Card Number', :class => :label
  = f.text_field :card_number, :class => 'text_field'
.group
  = f.label :card_verification_value, 'Card Verification Value', :class => :label
  = f.text_field :card_verification_value, :class => 'text_field_small'
.group
  = f.label :card_expires_on, 'Card Expires On', :class => :label
  = f.date_select :card_expires_on, :discard_day => true, :start_year => Date.today.year, :add_month_numbers => true

%h3 Billing Address
.group
  %p= f.label :address1, 'Address 1', :class => :label
  %p= f.text_field :address1, :class => 'text_field'
.group
  %p= f.label :address2, 'Address 2', :class => :label
  %p= f.text_field :address2, :class => 'text_field'
.group
  %p= f.label :city, 'City', :class => :label
  %p= f.text_field :city, :class => 'text_field'
.group
  %p= f.label :state, 'State (US only)', :class => :label
  %p= f.select :state, us_state_options_for_select(:include_blank => true)
.group
  %p= f.label :zip, 'Zip Code', :class => :label
  %p= f.text_field :zip, :class => 'text_field_small'
.group
  %p= f.label :country, 'Country', :class => :label
  %p= f.select :country, country_options_for_select("US")

.group.navform.wat-cf
  %button.button{:type => 'submit'}
    = image_tag("web-app-theme/tick.png", :alt => "Save")
    = t("web-app-theme.save", :default => "Save")
  = link_to "#{image_tag("web-app-theme/cross.png", :alt => "Cancel")} Cancel", wholesale_wholesaler_credit_cards_path(current_wholesaler), :class => "button"

