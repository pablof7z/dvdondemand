- content_for :main_navigation do
  %li= link_to 'Wholesale Account', wholesale_root_path
  %li= link_to 'Invoices', wholesale_wholesaler_wholesaler_invoices_path(current_wholesaler)
  %li= link_to 'Catalogs', wholesale_wholesaler_catalogs_path(current_wholesaler)

.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "Edit My Account", edit_wholesaler_registration_path
      %li.active= link_to "Credit Card Data", wholesale_wholesaler_credit_cards_path(current_wholesaler)
      %li.last= link_to "New Credit Card", new_wholesale_wholesaler_credit_card_path(current_wholesaler)

  .content
    %h2.title
      All your credit cards
    .inner
      %table.table
        %tr
          %th.first ID
          %th Date
          %th Credit card type
          %th Credit card number
          %th Credit card expiration date
          %th Default
          %th.last &nbsp;
        = render :partial => @wholesaler.credit_cards
      .actions-bar.wat-cf
        .actions

- content_for :sidebar, render(:partial => 'wholesale/shared/sidebar')

