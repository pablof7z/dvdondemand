- content_for :primary_nav do
  =render :partial => 'retail/shared/navbar'

#content
  %h1 Edit my #{resource_name.to_s.humanize} account
  .box.sp
    - form_for resource_name, resource, :url => registration_path(resource_name), :html => { :class => :form, :method => :put } do |f|
      = f.error_messages

      %label{:for => 'email'}
        %span
          E-mail
        = f.text_field :email

      %label{:for => 'first_name'}
        %span
          First Name
        = f.text_field :first_name

      %label{:for => 'last_name'}
        %span
          Last Name
        = f.text_field :last_name

      %label{:for => 'address1'}
        %span
          Address 1
        = f.text_field :address1

      %label{:for => 'address2'}
        %span
          Address 2
        = f.text_field :address2

      %label{:for => 'city'}
        %span
          City
        = f.text_field :city

      %label{:for => 'state'}
        %span
          State
        = f.text_field :state

      %label{:for => 'state'}
        %span
          Zip Code
        = f.text_field :state

      %label{:for => 'country'}
        %span
          Country
        = f.country_select :country, { "United States" => "US" }

      %label
        %span
          Password
        = f.password_field :password
        %span.descr (leave blank if you don't want to change it)

      %label
        %span
          Password confirmation
        = f.password_field :password_confirmation

      %label
        %span
          Current Password
        = f.password_field :current_password
        %span.descr (we need your current password to confirm your changes)


      %p.btso
        %button.b1{:type => 'submit'}
          Update
        or
        =link_to 'Cancel', :back

    %h3.title Cancel my account
    .inner
      %p
        Unhappy?
        = link_to "Cancel my account", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete

    - content_for :sidebar, render(:partial => "shared/devise_user_links")

