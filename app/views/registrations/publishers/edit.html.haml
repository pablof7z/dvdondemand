- content_for :primary_nav do
  =render :partial => 'publish/shared/navbar'

#content
  %h1 Edit my #{resource_name.to_s.humanize} account
  .box.sp
    - form_for resource_name, resource, :url => registration_path(resource_name), :html => { :class => :form, :method => :put } do |f|
      = f.error_messages

      %label
        %span
          E-mail
        = f.text_field :email

      %label
        %span
          Password
        = f.password_field :password
        %span.descr (leave blank if you don't want to change it)

      %label
        %span
          Password confirmation
        = f.password_field :password_confirmation

      %label
        %span
          Artistic Name
        = f.text_field :nickname

      %label.lb
        %span
          Biography
        = f.text_area :bio
        %span.descr Ex: a simple text

      %label
        %span
          Current Password
        = f.password_field :current_password
        %span.descr (we need your current password to confirm your changes)

      %p.btso
        %button.button{:type => 'submit'}
          = image_tag("web-app-theme/tick.png", :alt => "Update")
          Update

  %h2.title Cancel my account
  .inner
    %p
      Unhappy?
      = link_to "Cancel my account", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete

- content_for :sidebar, render(:partial => "shared/devise_publisher_links")

