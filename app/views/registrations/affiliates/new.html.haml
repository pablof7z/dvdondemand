- content_for :primary_nav do
  =render :partial => 'affiliate/shared/navbar'

#content
  %h1 Sign up for your Affiliate account
  .box.sp
    - form_for resource_name, resource, :url => registration_path(resource_name), :html => { :class => :form } do |f|
      = f.error_messages

      %label
        %span
          Name
        = f.text_field :name
      
      %label
        %span
          E-mail
        = f.text_field :email

      %label
        %span
          Password
        = f.password_field :password
        %span.descr (leave blank if you don't want to change it)

      %label
        %span
          Password confirmation
        = f.password_field :password_confirmation

      %p.btso
        %button.b1{:type => 'submit'}
          Sign up

- content_for :sidebar, render(:partial => "shared/devise_affiliate_links")

