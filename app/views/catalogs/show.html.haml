.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to t("web-app-theme.list", :default => "List"), catalogs_path
      %li= link_to t("web-app-theme.new", :default => "New"), new_catalog_path
      %li.active= link_to t("web-app-theme.show", :default => "Show"), catalog_path
  .content
    .inner
      %p
        <b>#{ t("activerecord.attributes.catalog.title", :default => t("activerecord.labels.title", :default => "Title")) }:</b>
        = @catalog.title
      %p
        <b>#{ t("activerecord.attributes.catalog.description", :default => t("activerecord.labels.description", :default => "Description")) }:</b>
        = @catalog.description
      %p
        <b>#{ t("activerecord.attributes.catalog.publisher_id", :default => t("activerecord.labels.publisher_id", :default => "Publisher")) }:</b>
        = @catalog.publisher_id
      .wat-cf
        #{ link_to "#{image_tag("web-app-theme/application_edit.png", :alt => t("web-app-theme.edit", :default=> "Edit"))} #{t("web-app-theme.edit", :default=> "Edit")}", edit_catalog_path(@catalog), :class => "button" } 
        #{ link_to "#{image_tag("web-app-theme/cross.png", :alt => t("web-app-theme.delete", :default=> "Delete"))} #{t("web-app-theme.delete", :default => "Delete")}", catalog_path(@catalog), :method => "delete", :class => "button", :confirm => t("web-app-theme.confirm", :default => "Are you sure?") }

- content_for :sidebar, render(:partial => 'sidebar')