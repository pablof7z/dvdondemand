.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "&laquo; #{@publisher.first_name} #{@publisher.last_name}", publisher_path(@publisher)
      %li= link_to "Catalogs", publisher_catalogs_path(@publisher)
      %li= link_to t("web-app-theme.new", :default => "New"), new_publisher_catalog_path(@publisher)
      %li.active= link_to t("web-app-theme.show", :default => "Show"), publisher_catalog_path(@publisher)
  .content
    .inner
      %p
        <b>#{ t("activerecord.attributes.catalog.title", :default => t("activerecord.labels.title", :default => "Title")) }:</b>
        = @catalog.title
      %p
        <b>#{ t("activerecord.attributes.catalog.description", :default => t("activerecord.labels.description", :default => "Description")) }:</b>
        = @catalog.description
      .wat-cf
        #{ link_to "#{image_tag("web-app-theme/application_edit.png", :alt => t("web-app-theme.edit", :default=> "Edit"))} #{t("web-app-theme.edit", :default=> "Edit")}", edit_publisher_catalog_path(@publisher,@catalog), :class => "button" }
        #{ link_to "#{image_tag("web-app-theme/cross.png", :alt => t("web-app-theme.delete", :default=> "Delete"))} #{t("web-app-theme.delete", :default => "Delete")}", publisher_catalog_path(@publisher,@catalog), :method => "delete", :class => "button", :confirm => t("web-app-theme.confirm", :default => "Are you sure?") }

- content_for :sidebar, render(:partial => 'sidebar')
