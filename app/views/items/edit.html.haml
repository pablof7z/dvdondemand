.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to t("web-app-theme.list", :default => "List"), items_path
      %li= link_to t("web-app-theme.new", :default => "New"), new_item_path
      %li.active= link_to t("web-app-theme.edit", :default => "Edit"), edit_item_path
  .content
    %h2.title #{ t("web-app-theme.edit", :default => "Edit") } Item
    .inner
      - form_for @item, :url => item_path(@item), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}

- content_for :sidebar, render(:partial => 'sidebar')