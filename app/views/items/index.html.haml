.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "#{t("web-app-theme.list", :default => "List")}", items_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_item_path
  .content
    %h2.title #{ t("web-app-theme.all", :default => "All") } Items
    .inner
      %table.table
        %tr
          %th.first ID
          %th= t("activerecord.attributes.item.title", :default => t("activerecord.labels.title", :default => "Title"))
          %th= t("web-app-theme.created_at", :default => "Created at")
          %th.last &nbsp;
        - @items.each do |item|
          %tr{:class => cycle("odd", "even")}
            %td= item.id
            %td= link_to item.title, item_path(item)
            %td= item.created_at
            %td.last
              = link_to t("web-app-theme.show", :default => "Show"), item_path(item)
              |
              = link_to t("web-app-theme.edit", :default => "Edit"), edit_item_path(item)
              |
              = link_to t("web-app-theme.delete", :default => "Delete"), item_path(item), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
      .actions-bar.wat-cf
        .actions
        
- content_for :sidebar, render(:partial => 'sidebar')