!!! Strict
%html
  %head
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}
    %title DVDonDemand
    = stylesheet_link_tag "web_app_theme", "web_app_theme_override", "themes/orange/style", :cache => true
  %body
    #container
      #header
        %h1= link_to 'OnDemand WebStore Administration', '#'
        #user-navigation
          %ul.wat-cf
            - unless admin_signed_in?
              %li= link_to 'Login', new_admin_session_path
            - else
              %li= link_to 'Logout', destroy_admin_session_path
        #main-navigation
          %ul.wat-cf
            - if admin_signed_in?
              = yield :main_navigation
            - else
              %li.active= link_to 'Administration', admin_root_path
      #wrapper.wat-cf
        .flash
          - flash.each do |type, message|
            .message{:class => type.to_s}
              %p= message
        #main
          = yield
          #footer
            .block
              %p Copyright &copy;2010 DVDonDemand
        #sidebar
          = yield :sidebar

