!!! Strict
%html
  %head
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}
    %title DVDonDemand Retail WebStore
    = stylesheet_link_tag "web_app_theme", "web_app_theme_override", "themes/djime-cerulean/style", :cache => true
  %body
    #container
      #header
        %h1= link_to 'OnDemand Retail WebStore', root_path
        #user-navigation
          %ul.wat-cf
            - if customer_signed_in?
              %li Welcome, #{link_to current_customer.full_name, root_path}
              %li= link_to "My Cart (#{cart_total_items})", retail_customer_cart_path(current_customer)
              %li= link_to 'Logout', destroy_customer_session_path
            - elsif publisher_signed_in?
              %li= link_to "Publisher's Dashboard", publish_root_path
              %li= link_to 'Logout', destroy_publisher_session_path
            - else
              %li= link_to 'User Login', new_customer_session_path
              %li= link_to 'Sign Up', new_customer_registration_path
        #main-navigation
          %ul.wat-cf
            = yield :main_navigation
      #wrapper.wat-cf
        .flash
          - flash.each do |type, message|
            .message{:class => type.to_s}
              %p= message
        #main
          = yield
          #footer
            .block
              %p Copyright &copy;2010 DVDonDemand
        #sidebar
          = yield :sidebar

