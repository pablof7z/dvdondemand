- content_for :main_navigation do
  %li= link_to 'Administration', admin_root_path
  %li= link_to 'Genres', admin_genres_path
  %li= link_to 'Publishers', admin_publishers_path
  %li= link_to 'Packaging', admin_packaging_options_path
  %li.active= link_to 'Wholesale', admin_wholesale_prices_path

.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "Wholesale Prices", admin_wholesale_prices_path
      %li= link_to "New", new_admin_wholesale_price_path
      %li.active= link_to "Show", admin_wholesale_price_path(@wholesale_price)
  .content
    .inner
      %p
        %b Minimum Quantity:
        = @wholesale_price.minimum_quantity
      %p
        %b Discount Percentage:
        = number_to_percentage(@wholesale_price.discount_percentage, :precision => 1)
      %p
        %b Terms of Agreement:
      %p= @wholesale_price.terms
      %p
        %b Enabled:
        = @wholesale_price.enabled ? 'Yes' : 'No'
      .wat-cf
        #{ link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "Edit")} Edit", edit_admin_wholesale_price_path(@wholesale_price), :class => "button" }
        #{ link_to "#{image_tag("web-app-theme/cross.png", :alt => "Delete")} Delete", admin_wholesale_price_path(@wholesale_price), :method => "delete", :class => "button", :confirm => "Are you sure?" }

- content_for :sidebar, render(:partial => 'admin/shared/sidebar')

