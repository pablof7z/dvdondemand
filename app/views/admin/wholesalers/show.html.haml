- content_for :main_navigation do
  %li= link_to 'Administration', admin_root_path
  %li= link_to 'Fees', admin_fees_path
  %li= link_to 'Genres', admin_genres_path
  %li= link_to 'Orders', admin_orders_path
  %li= link_to 'Publishers', admin_publishers_path
  %li.active= link_to 'Wholesale Accounts', admin_wholesalers_path
  %li= link_to 'Packaging', admin_packaging_options_path
  %li= link_to 'Shipping', admin_shipping_options_path
  %li= link_to 'Wholesale', admin_wholesale_prices_path

.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "All Wholesalers", admin_wholesalers_path
      %li.active= link_to "Show", admin_wholesalers_path
  .content
    .inner
      %p
        %b Name:
        = @wholesaler.name
      %p
        %b E-mail:
        = @wholesaler.email
      %p
        %b Balance:
        = @wholesaler.money_owed
      .wat-cf
        #{ link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "Edit")} Edit", edit_admin_wholesaler_path(@wholesaler), :class => "button" }
        #{ link_to "#{image_tag("web-app-theme/cross.png", :alt => "Delete")} Delete", admin_wholesaler_path(@wholesaler), :method => "delete", :class => "button", :confirm => t("web-app-theme.confirm", :default => "Are you sure?") }

- content_for :sidebar, render(:partial => 'admin/shared/sidebar')

