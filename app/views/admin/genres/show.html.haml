- content_for :main_navigation do
  %li= link_to 'Administration', admin_root_path
  %li.active= link_to 'Genres', admin_genres_path
  %li= link_to 'Orders', admin_orders_path
  %li= link_to 'Publishers', admin_publishers_path
  %li= link_to 'Wholesale', admin_wholesale_prices_path

.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "All Genres", admin_genres_path
      %li= link_to "New", new_admin_genre_path
      %li.active= link_to "Show", admin_genres_path(@genre)
  .content
    .inner
      %p
        %b Media:
        = @genre.media_type.name
      %p
        %b Title:
        = @genre.title
      .wat-cf
        #{ link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "Edit")} Edit", edit_admin_genre_path(@genre), :class => "button" }
        #{ link_to "#{image_tag("web-app-theme/cross.png", :alt => "Delete")} Delete", admin_genre_path(@genre), :method => "delete", :class => "button", :confirm => "Are you sure?" }

- content_for :sidebar, render(:partial => 'admin/shared/sidebar')

