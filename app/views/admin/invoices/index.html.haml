- content_for :main_navigation do
  %li= link_to 'Administration', admin_root_path
  %li= link_to 'Fees', admin_fees_path
  %li= link_to 'Genres', admin_genres_path
  %li= link_to 'Orders', admin_orders_path
  %li= link_to 'Publishers', admin_publishers_path
  %li.active= link_to 'Wholesale Accounts', admin_wholesalers_path
  %li= link_to 'Packaging', admin_packaging_options_path
  %li= link_to 'Shipping', admin_shipping_options_path
  %li= link_to 'Wholesale', admin_wholesale_prices_path

.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "All Wholesale Accounts", admin_wholesalers_path
      %li= link_to "#{@wholesaler.name}", admin_wholesaler_path(@wholesaler)
      %li.active= link_to "Invoices"
  .content
    %h2.title
      = "Invoices for #{@wholesaler.name}"
    .inner
      %table.table
        %tr
          %th.first ID
          %th Created at
          %th Total
          %th Owed
          %th.last &nbsp;
        - @invoices.each do |invoice|
          %tr{:class => cycle("odd", "even")}
            %td
              = invoice.id
            %td= invoice.created_at
            %td= number_to_currency(invoice.total)
            %td= number_to_currency(invoice.owed)
            %td.last
              = link_to "Payments", admin_wholesaler_invoice_payments_path(@wholesaler, invoice)

- content_for :sidebar, render(:partial => 'admin/shared/sidebar')

