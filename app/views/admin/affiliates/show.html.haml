- content_for :primary_nav do
  =render :partial => 'admin/shared/navbar'

#content
  .inner
    %p
      %b Name:
      = @affiliate.name
    %p
      %b E-mail:
      = @affiliate.email
    %p
      %b Commission Percentage
      = "#{@affiliate.commission_percentage}%"
    %p
      %b Commission Per Unit
      = number_to_currency(@affiliate.commission_per_unit)
    %p
      %b Approved:
      = @affiliate.approved ? 'Yes' : 'No'
      = @affiliate.approval_source
    .wat-cf
      #{ link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "Edit")} Edit", edit_admin_affiliate_path(@affiliate), :class => "button" }
      #{ link_to "#{image_tag("web-app-theme/cross.png", :alt => "Delete")} Delete", admin_affiliate_path(@affiliate), :method => "delete", :class => "button", :confirm => t("web-app-theme.confirm", :default => "Are you sure?") }

- content_for :sidebar, render(:partial => 'admin/shared/sidebar')

