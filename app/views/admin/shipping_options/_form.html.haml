.group
  = f.error_messages

.group
  = f.label :title, "Title", :class => :label
  = f.text_field :title, :class => 'text_field'
  %span.description (Required)

.group
  = f.label :price, "Price", :class => :label
  = f.text_field :price, :class => 'text_field_small'
  %span.description (Required)

.group
  = f.label :maximum_weight, "Weight", :class => :label
  = f.text_field :maximum_weight, :class => 'text_field_small'

