- content_for :main_navigation do
  %li= link_to 'Administration', admin_root_path
  %li= link_to 'Genres', admin_genres_path
  %li= link_to 'Orders', admin_orders_path
  %li= link_to 'Publishers', admin_publishers_path
  %li= link_to 'Packaging', admin_packaging_options_path
  %li.active= link_to 'Shipping', admin_shipping_options_path
  %li= link_to 'Wholesale', admin_wholesale_prices_path

.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "Shipping Options", admin_shipping_options_path
      %li= link_to "New", new_admin_shipping_option_path
  .content
    %h2.title All Shipping Options
    .inner
      %table.table
        %tr
          %th.first ID
          %th Title
          %th Weight
          %th Priority?
          %th Price
          %th.last &nbsp;
        - for shipping in @shipping_options
          %tr{:class => cycle("odd", "even")}
            %td= shipping.id
            %td= link_to shipping.title, admin_shipping_option_path(shipping)
            %td= shipping.maximum_weight
            %td= shipping.priority ? 'Yes!' : 'No'
            %td= number_to_currency(shipping.price)
            %td.last
              = link_to "Show", admin_shipping_option_path(shipping)
              |
              = link_to "Edit", edit_admin_shipping_option_path(shipping)
              |
              = link_to "Delete", admin_shipping_option_path(shipping), :method => :delete, :confirm => "Are you sure?"
      .actions-bar.wat-cf
        .actions

- content_for :sidebar, render(:partial => 'admin/shared/sidebar')

