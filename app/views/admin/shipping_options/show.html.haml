- content_for :main_navigation do
  %li= link_to 'Administration', admin_root_path
  %li= link_to 'Genres', admin_genres_path
  %li= link_to 'Orders', admin_orders_path
  %li= link_to 'Publishers', admin_publishers_path
  %li= link_to 'Packaging', admin_packaging_options_path
  %li.active= link_to 'Shipping', admin_shipping_options_path
  %li= link_to 'Wholesale', admin_wholesale_prices_path

.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "Shipping Options", admin_shipping_options_path
      %li= link_to "New", new_admin_shipping_option_path
      %li.active= link_to "Show", admin_shipping_option_path(@shipping_option)
  .content
    .inner
      %p
        %b Title:
        = @shipping_option.title
      %p
        %b Price:
        = number_to_currency(@shipping_option.price)
      %p
        %b Maximum Weight:
        = @shipping_option.maximum_weight
      %p
        %b Priority?:
        = @shipping_option.priority ? 'Yes!' : 'No'
      - unless @shipping_option.description.blank?
        %p
          %b Description:
        %p
          = @shipping_option.description
      .wat-cf
        = link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "Edit")} Edit", edit_admin_shipping_option_path(@shipping_option), :class => "button" 
        = link_to "#{image_tag("web-app-theme/cross.png", :alt => "Delete")} Delete", admin_shipping_option_path(@shipping_option), :method => "delete", :class => "button", :confirm => "Are you sure?" 

- content_for :sidebar, render(:partial => 'admin/shared/sidebar')

