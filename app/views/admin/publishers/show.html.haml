- content_for :main_navigation do
  %li= link_to 'Administration', admin_root_path
  %li= link_to 'Genres', admin_genres_path
  %li= link_to 'Orders', admin_orders_path
  %li.active= link_to 'Publishers', admin_publishers_path
  %li= link_to 'Wholesale', admin_wholesale_prices_path

.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "All Publishers", admin_publishers_path
      %li.active= link_to "Show", admin_publisher_path
  .content
    .inner
      %p
        %b First name:
        = @publisher.first_name
      %p
        %b Last name:
        = @publisher.last_name
      %p
        %b E-mail:
        = @publisher.email
      %p
        %b Address:
        = @publisher.address
      %p
        %b Approved:
        = @publisher.approved ? 'Yes' : 'No'
      .wat-cf
        #{ link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "Edit")} Edit", edit_admin_publisher_path(@publisher), :class => "button" }
        #{ link_to "#{image_tag("web-app-theme/cross.png", :alt => "Delete")} Delete", admin_publisher_path(@publisher), :method => "delete", :class => "button", :confirm => t("web-app-theme.confirm", :default => "Are you sure?") }

- content_for :sidebar, render(:partial => 'admin/shared/sidebar')

