- content_for :main_navigation do
  %li= link_to 'Administration', admin_root_path
  %li.active= link_to 'Fees', admin_fees_path
  %li= link_to 'Genres', admin_genres_path
  %li= link_to 'Orders', admin_orders_path
  %li= link_to 'Publishers', admin_publishers_path
  %li= link_to 'Wholesale Accounts', admin_wholesalers_path
  %li= link_to 'Packaging', admin_packaging_options_path
  %li= link_to 'Shipping', admin_shipping_options_path
  %li= link_to 'Wholesale', admin_wholesale_prices_path

.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "All Fees", admin_fees_path
      %li= link_to "New", new_admin_fee_path
  .content
    %h2.title All Fees
    .inner
      %table.table
        %tr
          %th.first ID
          %th Description
          %th Amount
          %th.last &nbsp;
        - for fee in @fees
          %tr{:class => cycle("odd", "even")}
            %td= fee.id
            %td= link_to fee.description, admin_fee_path(fee)
            %td
              = fee.percentage ? "#{fee.amount}%" : number_to_currency(fee.amount)
            %td.last
              = link_to "Show", admin_fee_path(fee)
              |
              = link_to "Edit", edit_admin_fee_path(fee)
              |
              = link_to "Delete", admin_fee_path(fee), :method => :delete, :confirm => "Are you sure?"
      .actions-bar.wat-cf
        .actions

- content_for :sidebar, render(:partial => 'admin/shared/sidebar')

