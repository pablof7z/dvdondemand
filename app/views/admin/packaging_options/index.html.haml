- content_for :main_navigation do
  %li= link_to 'Administration', admin_root_path
  %li= link_to 'Genres', admin_genres_path
  %li= link_to 'Publishers', admin_publishers_path
  %li.active= link_to 'Packaging', admin_packaging_options_path
  %li= link_to 'Wholesale', admin_wholesale_prices_path

.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "Packaging Options", admin_packaging_options_path
      %li= link_to "New", new_admin_packaging_option_path
  .content
    %h2.title All Packaging Options
    .inner
      %table.table
        %tr
          %th.first ID
          %th Title
          %th Weight
          %th Price
          %th.last &nbsp;
        - for packaging in @packaging_options
          %tr{:class => cycle("odd", "even")}
            %td= packaging.id
            %td= link_to packaging.title, admin_packaging_option_path(packaging)
            %td= packaging.weight
            %td= number_to_currency(packaging.price)
            %td.last
              = link_to "Show", admin_packaging_option_path(packaging)
              |
              = link_to "Edit", edit_admin_packaging_option_path(packaging)
              |
              = link_to "Delete", admin_packaging_option_path(packaging), :method => :delete, :confirm => "Are you sure?"
      .actions-bar.wat-cf
        .actions

- content_for :sidebar, render(:partial => 'admin/shared/sidebar')

