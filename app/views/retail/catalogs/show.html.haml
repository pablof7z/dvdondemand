.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "&laquo; All Catalogs", retail_catalogs_path
      %li.active= link_to @catalog.title, retail_catalog_path
  .content
    .inner
      %p
        %b Publisher:
        = @catalog.publisher.full_name
      %p
        %b Description:
        = @catalog.description
      %table.table
        %tr
          %th.first
          %th Title
          %th Price
          %th.last
        - @catalog.products.each do |product|
          %tr{:class => cycle("odd", "even")}
            %td
              - if product.cover.exists?(:thumb)
                = image_tag(product.cover.url(:thumb))
              - else
                = product.id
            %td= link_to product.title, retail_product_path(product)
            %td= number_to_currency(product.price)
            %td.last= product.description
      .wat-cf

- content_for :sidebar, render(:partial => 'sidebar')

