.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "&laquo; All Catalogs", retail_catalogs_path
      %li= link_to @catalog.title, retail_catalog_path
      %li.active= link_to @product.title, retail_catalog_product_path(@catalog,@product)
  .content
    .inner
      - unless @product.product_type.blank?
        %p
          %b Product Type:
          = @product.product_type
      - if @product.cover.exists?(:medium)
        %p= image_tag(@product.cover.url(:medium))
        %p= link_to 'Full size Cover art', @product.cover.url, :target => :blank
      %p
        %b Title:
        = @product.title
      %p
        %b Studio:
        = @product.studio
      %p
        %b Description:
        = @product.description
      %p
        %b Price:
        = number_to_currency(@product.price)
      - unless @product.running_time.blank?
        %p
          %b Running Time:
          = @product.running_time
      %p
        %b Published by:
        = @product.publisher.full_name
      .wat-cf

- content_for :sidebar, render(:partial => 'sidebar')

