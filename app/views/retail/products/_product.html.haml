%tr{:class => cycle("odd", "even")}
  %td
    - if product.cover_art.exists?(:thumb)
      = image_tag(product.cover_art.url(:thumb))
    - else
      = product.id
  %td= link_to product.title, retail_catalog_product_path(@catalog,product)
  %td= number_to_currency(product.price)
  %td.last= product.description

