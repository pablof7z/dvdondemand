- render :partial => 'retail/catalogs/main_navigation'

.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "My Cart", retail_cart_path
  .content
    %h2.title My Cart so far
    .inner
    .inner
      %table.table
        %tr
          %th.first
          %th Title
          %th Qty.
          %th{:align => 'right'} Price
          %th.last
        - for item in customer_session[:cart_items]
          - form_tag :controller => 'retail/cart', :action => 'update' do
            %tr{:class => cycle("odd", "even")}
              - product = Product.find(item['product_id'].to_i)
              %td
              %td= link_to product.title, retail_catalog_product_path(item['catalog_id'],item['product_id'])
              %td.form
                = hidden_field_tag 'item[product_id]', item['product_id']
                = text_field_tag 'item[qty]', item['qty'], :class => 'cart_text_field_small'
                %button.button{:type => 'submit'}
                  = image_tag("web-app-theme/tick.png", :alt => "Update")
                  Update
              %td= number_to_currency(item['price'].to_f*item['qty'].to_f)
              %td= link_to 'Delete', retail_cart_del_path(item['product_id'])
        %tr
          %td{:colspan => '2'}
          %td TOTAL
          %td
            %b= number_to_currency(cart_total)
          %td

- content_for :sidebar, render(:partial => 'retail/shared/sidebar')

