.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to t("web-app-theme.list", :default => "List"), publishers_path
      %li= link_to t("web-app-theme.new", :default => "New"), new_publisher_path
      %li.active= link_to t("web-app-theme.edit", :default => "Edit"), edit_publisher_path
  .content
    %h2.title #{ t("web-app-theme.edit", :default => "Edit") } Publisher
    .inner
      - form_for @publisher, :url => publisher_path(@publisher), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}

- content_for :sidebar, render(:partial => 'sidebar')