.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "#{t("web-app-theme.list", :default => "All Publishers")}", publishers_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_publisher_path
  .content
    %h2.title #{ t("web-app-theme.all", :default => "All") } Publishers
    .inner
      %table.table
        %tr
          %th.first ID
          %th= t("activerecord.attributes.publisher.first_name", :default => t("activerecord.labels.first_name", :default => "Name"))
          %th= t("web-app-theme.created_at", :default => "Created at")
          %th.last &nbsp;
        - @publishers.each do |publisher|
          %tr{:class => cycle("odd", "even")}
            %td= publisher.id
            %td= link_to "#{publisher.first_name} #{publisher.last_name}", publisher_path(publisher)
            %td= publisher.created_at
            %td.last
              = link_to t("web-app-theme.show", :default => "Show"), publisher_path(publisher)
              |
              = link_to t("web-app-theme.edit", :default => "Edit"), edit_publisher_path(publisher)
              |
              = link_to t("web-app-theme.delete", :default => "Delete"), publisher_path(publisher), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
              ||
              = link_to "Catalogs (#{publisher.catalogs.count})", publisher_catalogs_path(publisher)
      .actions-bar.wat-cf
        .actions

- content_for :sidebar, render(:partial => 'sidebar')
