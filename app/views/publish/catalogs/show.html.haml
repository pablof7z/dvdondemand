.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "&laquo; #{@publisher.first_name} #{@publisher.last_name}", publish_publisher_path(@publisher)
      %li= link_to "Catalogs", publish_publisher_catalogs_path(@publisher)
      %li= link_to "New", new_publish_publisher_catalog_path(@publisher)
      %li.active= link_to "Show", publish_publisher_catalog_path(@publisher)
  .content
    .inner
      %p
        %b Title:
        = @catalog.title
      %p
        %b Description:
        = @catalog.description
      .wat-cf
        #{ link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "Edit")} Edit", edit_publish_publisher_catalog_path(@publisher,@catalog), :class => "button" }
        #{ link_to "#{image_tag("web-app-theme/cross.png", :alt => "Delete")} Delete", publish_publisher_catalog_path(@publisher,@catalog), :method => "delete", :class => "button", :confirm => t("web-app-theme.confirm", :default => "Are you sure?") }

- content_for :sidebar, render(:partial => 'publish/shared/sidebar')

