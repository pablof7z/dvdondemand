- content_for :main_navigation do
  %li= link_to 'Dashboard', publisher_root_path
  %li.active= link_to 'Catalogs', publish_publisher_catalogs_path(current_publisher)
  %li= link_to 'Products', publish_publisher_products_path(current_publisher)
  %li= link_to 'Sales', publish_publisher_sales_path(current_publisher)
  %li= link_to 'Payments', publish_publisher_publisher_payments_path(current_publisher)

.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "All", publish_publisher_catalogs_path(current_publisher)
      %li= link_to "New", new_publish_publisher_catalog_path(current_publisher)
      %li.active= link_to "Show", publish_publisher_catalog_path(current_publisher)
  .content
    .inner
      %p
        %b Title:
        = @catalog.title
      %p
        %b Description:
        = @catalog.description
      .wat-cf
        #{ link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "Edit")} Edit", edit_publish_publisher_catalog_path(current_publisher,@catalog), :class => "button" }
        #{ link_to "#{image_tag("web-app-theme/cross.png", :alt => "Delete")} Delete", publish_publisher_catalog_path(current_publisher,@catalog), :method => "delete", :class => "button", :confirm => t("web-app-theme.confirm", :default => "Are you sure?") }
      - unless @catalog.products.empty?
        %p Products featured in this Catalog:
        %table.table
          %tr
            %th.first ID
            %th Title
            %th Created at
            %th.last &nbsp;
          = render :partial => 'publish/products/product', :collection => @catalog.products

- content_for :sidebar, render(:partial => 'publish/shared/sidebar')

