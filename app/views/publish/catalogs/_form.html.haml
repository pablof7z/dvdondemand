.group
  = f.error_messages

.group
  = f.label :title, "Title", :class => :label
  = f.text_field :title, :class => 'text_field'

.group
  = f.label :description, "Description", :class => :label
  = f.text_area :description, :rows => 5, :class => 'text_area'
  %span.description Ex: a simple text

.group
  = f.label :private, "Private", :class => :label
  = f.check_box :private, :class => 'check_box'
  Yes

.group
  = f.label :password, "Password", :class => :label
  = f.text_field :password, :class => 'text_field_small'
  %span.description (Required if Private checked)

.group.navform.wat-cf
  %button.button{:type => 'submit'}
    = image_tag("web-app-theme/tick.png", :alt => "Save")
    = t("web-app-theme.save", :default => "Save")
  = link_to "#{image_tag("web-app-theme/cross.png", :alt => "Cancel")} Cancel", publish_publisher_catalogs_path(current_publisher), :class => "button"

