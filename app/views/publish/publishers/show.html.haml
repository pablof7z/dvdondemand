.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "All Publishers", publish_publishers_path
      %li= link_to "New", new_publish_publisher_path
      %li.active= link_to "Show", publish_publisher_path
      %li= link_to "Catalogs (#{@publisher.catalogs.count}) &raquo;", publish_publisher_catalogs_path(@publisher)
      %li= link_to "Products (#{@publisher.products.count}) &raquo;", publish_publisher_products_path(@publisher)
  .content
    .inner
      %p
        %b First name:
        = @publisher.first_name
      %p
        %b Last name:
        = @publisher.last_name
      %p
        %b E-mail:
        = @publisher.email
      %p
        %b Address:
        = @publisher.address
      %p
        %b Approved:
        = @publisher.approved ? 'Yes' : 'No'
      .wat-cf
        #{ link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "Edit")} Edit", edit_publish_publisher_path(@publisher), :class => "button" }
        #{ link_to "#{image_tag("web-app-theme/cross.png", :alt => "Delete")} Delete", publish_publisher_path(@publisher), :method => "delete", :class => "button", :confirm => t("web-app-theme.confirm", :default => "Are you sure?") }

- content_for :sidebar, render(:partial => 'sidebar')
