.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "All Publishers", publish_publishers_path
      %li= link_to "New", new_publish_publisher_path
  .content
    %h2.title All Publishers
    .inner
      %table.table
        %tr
          %th.first ID
          %th Name
          %th Created at
          %th.last &nbsp;
        - @publishers.each do |publisher|
          %tr{:class => cycle("odd", "even")}
            %td= publisher.id
            %td= link_to "#{publisher.first_name} #{publisher.last_name}", publish_publisher_path(publisher)
            %td= publisher.created_at
            %td.last
              = link_to "Show", publish_publisher_path(publisher)
              |
              = link_to "Edit", edit_publish_publisher_path(publisher)
              |
              = link_to "Delete", publish_publisher_path(publisher), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
              ||
              = link_to "Catalogs (#{publisher.catalogs.count})", publish_publisher_catalogs_path(publisher)
      .actions-bar.wat-cf
        .actions

- content_for :sidebar, render(:partial => 'publish/shared/sidebar')

