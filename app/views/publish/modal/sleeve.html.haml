#contentFbox
  .box.sp
    - if params[:media_type] == 'cd'
      %h1 CD Sleeve
    - else
      %h1 DVD Sleeve
    .col.x4
      - if params[:media_type] == 'cd'
        %img#sleeve-cropbox{:src => @product.cd_sleeve_art.url(:medium)}
      - else
        %img#sleeve-cropbox{:src => @product.dvd_sleeve_art.url(:medium)}
    .col.x4
      - if params[:media_type] == 'cd'
        %div{:style => 'width: 240px; height: 120px; overflow: hidden; margin: 0 auto;'}
          %img#sleeve-back{:src => "/images/template_cd.png", :style => 'position: absolute; z-index: 1; width: 250px; height: 130px;'}
          %img.sleeve-preview{:src => @product.cd_sleeve_art.url(:original), :style => 'margin: 5px; padding-left: 12px;'}
      - else
        %div{:style => 'width: 240px; height: 160px; overflow: hidden; margin: 0 auto;'}
          %img#sleeve-back{:src => "/images/template_dvd.png", :style => 'position: absolute; z-index: 1; width: 240px; height: 160px'}
          %img.sleeve-preview{:src => @product.dvd_sleeve_art.url(:original)}

    %p.btso.b1
      %button{:type => 'submit'} Save
      %span
        or
        %a{:href => '#cancel'} Cancel
