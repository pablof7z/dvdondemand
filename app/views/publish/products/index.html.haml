- content_for :main_navigation do
  %li= link_to 'Dashboard', publisher_root_path
  %li= link_to 'Catalogs', publish_publisher_catalogs_path(current_publisher)
  %li.active= link_to 'Products', publish_publisher_products_path(current_publisher)
  %li= link_to 'Sales', publish_publisher_sales_path(current_publisher)
  %li= link_to 'Payments', publish_publisher_publisher_payments_path(current_publisher)

.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "All", publish_products_path
      %li= link_to "New", new_publish_publisher_product_path(current_publisher)
  .content
    %h2.title
      All your uploaded Products
      - unless @catalog.blank?
        for #{@catalog.title}
    .inner
      %table.table
        %tr
          %th.first ID
          %th Title
          %th Created at
          %th.last &nbsp;
        - @products.each do |product|
          %tr{:class => cycle("odd", "even")}
            %td
              - if product.cover.exists?(:thumb)
                = image_tag(product.cover.url(:thumb))
              - else
                = product.id
            %td= link_to product.title, publish_publisher_product_path(current_publisher,product)
            %td= product.created_at
            %td.last
              = link_to "Show", publish_publisher_product_path(current_publisher,product)
              |
              = link_to "Edit", edit_publish_publisher_product_path(current_publisher,product)
              |
              = link_to "Delete", publish_publisher_product_path(current_publisher,product), :method => :delete, :confirm => "Are you sure?"
      .actions-bar.wat-cf
        .actions

- content_for :sidebar, render(:partial => 'publish/shared/sidebar')

