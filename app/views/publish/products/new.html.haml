.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "&laquo; #{@publisher.first_name} #{@publisher.last_name}", publish_publisher_path(@publisher)
      %li= link_to "Products", publish_publisher_products_path(@publisher)
      %li.active= link_to "New", new_publish_publisher_product_path(@publisher)
  .content
    %h2.title New Product for #{@publisher.first_name} #{@publisher.last_name}
    .inner
      - form_for @product, :url => publish_publisher_products_path(@publisher), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}

- content_for :sidebar, render(:partial => 'publish/shared/sidebar')

