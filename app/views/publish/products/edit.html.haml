.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "&laquo; #{@publisher.first_name} #{@publisher.last_name}", publish_publisher_path(@publisher)
      %li= link_to "Products", publish_publisher_products_path(@publisher)
      %li= link_to "New", new_publish_publisher_product_path
      %li.active= link_to "Edit", edit_publish_publisher_product_path
  .content
    %h2.title Edit Product
    .inner
      - form_for @product, :url => publish_publisher_product_path(@publisher,@product), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}

- content_for :sidebar, render(:partial => 'discounts', :locals => {:wholesale_prices => @product.wholesale_prices})
- content_for :sidebar do
  %ul.navigation
    %li
      = link_to 'Manage all wholesale prices for this product', publish_publisher_product_wholesale_prices_path(@publisher,@product)

