.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "&laquo; #{@publisher.first_name} #{@publisher.last_name}", publish_publisher_path(@publisher)
      %li= link_to "Products", publish_publisher_products_path(@publisher)
      %li= link_to "Wholesale Prices", publish_publisher_product_wholesale_prices_path(@publisher,@product)
      %li= link_to "New", new_publish_publisher_product_wholesale_price_path(@publisher,@product)
      %li.active= link_to "Show", publish_publisher_product_wholesale_price_path(@publisher,@product)
  .content
    .inner
      %p
        %b Minimum Quantity:
        = @wholesale_price.minimum_quantity
      %p
        %b Discount Percentage:
        = number_to_percentage(@wholesale_price.discount_percentage, :precision => 1)
      %p
        %b Enabled:
        = @wholesale_price.enabled ? 'Yes' : 'No'
      .wat-cf
        #{ link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "Edit")} Edit", edit_publish_publisher_product_wholesale_price_path(@publisher,@product,@wholesale_price), :class => "button" }
        #{ link_to "#{image_tag("web-app-theme/cross.png", :alt => "Delete")} Delete", publish_publisher_product_wholesale_price_path(@publisher,@product,@wholesale_price), :method => "delete", :class => "button", :confirm => "Are you sure?" }

- content_for :sidebar, render(:partial => 'sidebar')

