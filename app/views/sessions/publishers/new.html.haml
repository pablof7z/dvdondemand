- content_for :primary_nav do
  %ul.primary-nav
    %li= link_to 'Dashboard', publisher_root_path

%h1 Login to your Publisher account

- form_for resource_name, resource, :url => session_path(resource_name) do |f|
  %p= f.label :email, 'E-mail', :class => :label
  %p= f.text_field :email, :class => 'text_field'

  %p= f.label :password, 'Password', :class => :label
  %p= f.password_field :password, :class => 'text_field'

  - if devise_mapping.rememberable?
    = f.label :remember_me, "Remember me", :class => :label
    = f.check_box :remember_me, :class => 'check_box'

  %button.button{:type => 'submit'}
    = image_tag("web-app-theme/tick.png", :alt => "Login")
    Login

- content_for :sidebar, render(:partial => "shared/devise_publisher_links")

