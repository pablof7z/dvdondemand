.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "All Customers", customers_path
      %li= link_to "New", new_customer_path
      %li.active= link_to "Edit", edit_customer_path
  .content
    %h2.title #{ t("web-app-theme.edit", :default => "Edit") } Customer
    .inner
      - form_for @customer, :url => customer_path(@customer), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}

- content_for :sidebar, render(:partial => 'sidebar')

