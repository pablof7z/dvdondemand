.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "&laquo; #{@publisher.first_name} #{@publisher.last_name}", publisher_path(@publisher)
      %li= link_to "Products", publisher_products_path(@publisher)
      %li= link_to "New", new_publisher_product_path(@publisher)
      %li.active= link_to "Show", publisher_product_path(@publisher)
  .content
    .inner
      - unless @product.product_type.blank?
        %p
          %b Product Type:
          = @product.product_type
      - if @product.cover.exists?(:medium)
        %p= image_tag(@product.cover.url(:medium))
        %p= link_to 'Full size Cover art', @product.cover.url, :target => :blank
      %p
        %b Title:
        = @product.title
      %p
        %b Studio:
        = @product.studio
      %p
        %b Description:
        = @product.description
      %p
        %b Price:
        = number_to_currency(@product.price)
      - unless @product.running_time.blank?
        %p
          %b Running Time:
          = @product.running_time
      .wat-cf
        #{ link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "Edit")} #{t("web-app-theme.edit", :default=> "Edit")}", edit_publisher_product_path(@publisher,@product), :class => "button" }
        #{ link_to "#{image_tag("web-app-theme/cross.png", :alt => "Delete")} #{t("web-app-theme.delete", :default => "Delete")}", publisher_product_path(@publisher,@product), :method => "delete", :class => "button", :confirm => t("web-app-theme.confirm", :default => "Are you sure?") }

- content_for :sidebar, render(:partial => 'discounts', :locals => {:wholesale_prices => @product.wholesale_prices})
- content_for :sidebar do
  %ul.navigation
    %li
      = link_to 'Manage all wholesale prices for this product', publisher_product_wholesale_prices_path(@publisher,@product)

