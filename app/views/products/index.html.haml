.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "#{t("web-app-theme.list", :default => "List")}", products_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_product_path
  .content
    %h2.title #{ t("web-app-theme.all", :default => "All") } Products
    .inner
      %table.table
        %tr
          %th.first ID
          %th= t("activerecord.attributes.product.product_type", :default => t("activerecord.labels.product_type", :default => "Product_type"))
          %th= t("web-app-theme.created_at", :default => "Created at")
          %th.last &nbsp;
        - @products.each do |product|
          %tr{:class => cycle("odd", "even")}
            %td= product.id
            %td= link_to product.product_type, product_path(product)
            %td= product.created_at
            %td.last
              = link_to t("web-app-theme.show", :default => "Show"), product_path(product)
              |
              = link_to t("web-app-theme.edit", :default => "Edit"), edit_product_path(product)
              |
              = link_to t("web-app-theme.delete", :default => "Delete"), product_path(product), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
      .actions-bar.wat-cf
        .actions

- content_for :sidebar, render(:partial => 'sidebar')
