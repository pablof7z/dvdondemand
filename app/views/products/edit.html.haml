.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to t("web-app-theme.list", :default => "List"), products_path
      %li= link_to t("web-app-theme.new", :default => "New"), new_product_path
      %li.active= link_to t("web-app-theme.edit", :default => "Edit"), edit_product_path
  .content
    %h2.title #{ t("web-app-theme.edit", :default => "Edit") } Product
    .inner
      - form_for @product, :url => publisher_product_path(@publisher,@product), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}

- content_for :sidebar, render(:partial => 'sidebar')
