- content_for :primary_nav do
  =render :partial => 'retail/shared/navbar'

#content
  %h1 Resend User confirmation instructions
  .box.sp
    - form_for resource_name, resource, :url => confirmation_path(resource_name), :html => { :class => :form } do |f|
      = f.error_messages

      %label
        %span
          E-mail
        = f.text_field :email, :class => 'text_field'

      %p.btso
        %button.b1{:type => 'submit'}
          Resend confirmation instructions

- content_for :sidebar, render(:partial => "shared/devise_user_links")

